vendors = webkit moz o ms official
all-browser( prop, arguments )
  { prop }: arguments
  for vendor in vendors
     -{ vendor }-{ prop }: arguments

@font-face 
    src: url( ../font/en.otf ) format( opentype )
    font-family: en

html
    width  : 100%
    height : 100%

body
    display : -webkit-box
    -webkit-box-flex: 1
    -webkit-box-orient: vertical

    height  : 100%
    margin  : 0px
    padding : 0px

    font-family : en

    div
        display : -webkit-box
        -webkit-box-pack : center
        -webkit-box-align: center

.top
    height : 50px

.title h1
    font-size: 50px

.btn-download
    color: #fff
    font-size : 40px

    text-shadow: #136491 0px 1px 2px

    background-color: #2292CC
    background-image: linear-gradient(to bottom,#2FA6E4,#2292CC)
    background-repeat: repeat-x

    border-color: #066397
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);

    padding : 15px
    text-decoration: none

    -webkit-border-radius: 6px

    dispaly : -webkit-box


.btn-download:hover
    text-decoration: none
    background-position: 0 -15px
    -webkit-transition: background-position 0.1s linear
    -moz-transition: background-position 0.1s linear
    -o-transition: background-position 0.1s linear
    transition: background-position 0.1s linear

.btn-download span
    display : block

    width : 48px
    height : 48px

    background: url( "simptab/assets/image/webstore.png" ) no-repeat
