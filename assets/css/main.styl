// adapter all browser css propery
vendors = -webkit -moz -o -ms
prefix  = "-"
all-browser( prop, arguments, ppro = true )
  if ppro
    { prop }: arguments
  for vendor in vendors
     { vendor }-{ prop }: arguments

display-group( value, type )
  value + prefix + type

adapter-display( type = box )
  display: type
  for vendor in vendors
    display: display-group( vendor, type )

division()
    margin: 0 0 53px 0

@font-face
    src: url( ../font/en.otf )
    font-family: en

@font-face
    src: url( ../font/zh-cn.bmp ) format('woff')
    font-family: zh-cn

@font-face
    src: url( ../font/zh-tw.bmp ) format('woff')
    font-family: zh-tw

html
    width  : 100%
    height : 100%

body
    width   : 100%
    height  : 100%
    margin  : 0px
    padding : 0px

    font-family: en
    font-weight: bold

    background: url( ../image/bg.png ) repeat

    div
        adapter-display( flex )
        all-browser "justify-content",  center
        all-browser "align-items",      center

.top

    height: 50px
    padding: 0 10px

    background-color: #1DBA90

    nav
        adapter-display( flex )
        all-browser "flex-flow",        row nowrap
        all-browser "justify-content ", flex-end

        width : 100%

        a[class$="flag"] span:hover
            background-position: 0 3px
            all-browser: "transition", background-position 0.3s linear

        a
            adapter-display( flex )

            span
                adapter-display( "inline-box" )

                width : 40px
                height: 30px

            &:nth-child(1)
                span
                    background: url( ../image/zh-cn-flag.png ) no-repeat

            &:nth-child(2)
                padding: 0px 8px
                span
                    background: url( ../image/zh-tw-flag.png ) no-repeat

            &:nth-child(3)
                span
                    background: url( ../image/en-flag.png ) no-repeat

.header
    all-browser "flex-flow",       row wrap
    all-browser "justify-content", center

    background-color: #1DBA90
    color: #fff

    font-weight: bold

    padding: 0 10px

    .introduce
        all-browser "flex-flow",       column nowrap
        all-browser "justify-content", center

        .title
            all-browser "flex-flow", column nowrap

            margin-bottom: 15px

            div
                &:nth-child(1)
                    font-size: 50px
                &:nth-child(2)
                    font-size: 40px

        .download
            all-browser "justify-content", center
            all-browser "flex-flow",       column nowrap

        .btn-download
            adapter-display( flex )
            all-browser : "justify-content", center

            padding: 15px 15px 10px 15px
            margin-bottom: 15px

            color: #fff
            font-size: 33px

            text-decoration: none
            text-shadow: #000 0 1px 2px

            background-color: #7C4DFF

            all-browser : "border-radius", 6px
            all-browser : "box-shadow", 0 1px 5px rgba(0, 0, 0, 0.75)

            span
                display: block

                width : 48px
                height: @width

                background: url( ../image/webstore.png ) no-repeat

            nav
                adapter-display( flex )
                all-browser "flex-direction", column
                all-browser "align-items",    flex-end

                line-height: 0.5

                h3
                    padding: 0px
                    margin : 0px

                    line-height: 48px

                div
                    font-size  : 10px

            &:hover
                text-decoration: none
                background-position: 0 -15px

                all-browser "transition", background-position 0.1s linear
                all-browser "box-shadow", 0 1px 5px rgba(0, 0, 0, 0)

        .btn-offline-download
            padding: 0px 2px

            text-decoration: none

            &:hover
                all-browser "transition", background-color 1s ease
                all-browser "border-radius", 3px

                background-color: rgba(0,0,0,.4)
                color: #fff

        .smaller
            font-size: 10px
            color: #fff

    .banner
        height: 656px
        width: 853px
        background: url( ../image/introduce.jpg ) no-repeat

.main
    all-browser "flex-flow",       row wrap
    all-browser "justify-content", center

    padding: 0 147px

    margin: 25px 0

    .feature
        all-browser "flex-flow",  column nowrap

        width: 191px

        padding: 25px
        margin:  30px

        background-color: #eff0f2
        all-browser "border-radius", 8px

        div
            padding-bottom: 6px

        .icon
            width: 128px
            height: @width

        .desc
            font-size: 25px
            color: #B3B3B3

        .content
            color: #fff
            background-color: #1dba90
            all-browser "border-radius", 3px

            padding: 8px 20px

            font-size: 15px
            font-weight: bold

        &:nth-child(1) .icon
            background: url( ../image/multi-language.png ) no-repeat

        &:nth-child(2) .icon
            background: url( ../image/time.png ) no-repeat

        &:nth-child(3) .icon
            background: url( ../image/upload.png ) no-repeat

        &:nth-child(4) .icon
            background: url( ../image/download.png ) no-repeat

        &:nth-child(5) .icon
            background: url( ../image/favorite.png ) no-repeat

        &:nth-child(6) .icon
            background: url( ../image/shortcuts.png ) no-repeat

.footer
    all-browser "flex-flow", column nowrap

    background-color: #333
    color: #fff

    font-weight: normal

    width: 100%

    .copyright
        all-browser "flex-flow",       row wrap
        all-browser "justify-content", center

        padding: 0px 0px 10px 0px

    a
        color: #fff
        text-decoration: none
        font-weight: bold

        &:hover
            color: #000
            background-color  : rgba(255,255,255,1)
            all-browser "transition", background-color 1s ease
            all-browser "border-radius", 3px

    p
        margin: 0px

    // first child
    ul
        adapter-display( flex )
        all-browser "flex-flow",       row wrap
        all-browser "justify-content", center

        list-style: none

        padding: 0

        li
            adapter-display( flex )
            all-browser "flex-flow",       column wrap
            all-browser "align-items", center

            width: ( 960px / 2 )
            padding: 5px

            div
                all-browser "flex-flow",   column nowrap
                all-browser "align-items", flex-start

            // support
            &:nth-child(1) div

                    // share
                    nav
                        adapter-display( flex )
                        all-browser "flex-flow",   row nowrap
                        all-browser "justify-content", flex-start

                        padding: 1px 0px

                        a
                            adapter-display( flex )
                            padding: 0px 7px 0px 0px

                            background-color: rgba(0, 0, 0, 0)

                            span
                                display: block

                                width : 24px
                                height: @width

                                opacity: 0.2

                                &:hover
                                  opacity: 1
                                  all-browser: "transition", opacity 1s ease

                            .weibo-share-icon
                                background: url( ../image/weibo-share-icon.png ) no-repeat

                            .twitter-share-icon
                                background: url( ../image/twitter-share-icon.png ) no-repeat

                            .facebook-share-icon
                                background: url( ../image/facebook-share-icon.png ) no-repeat

                            .gplus-share-icon
                                background: url( ../image/gplus-share-icon.png ) no-repeat

            // author
            &:nth-child(2) div

                .photo
                    display: block

                    width : 46px
                    height: @width

                    all-browser "border-radius", 50%

                    background: url( ../image/photo.jpg ) no-repeat

                div
                    all-browser "flex-flow",       row nowrap
                    all-browser "justify-content", flex-start
                    all-browser "align-items",     center

                    div
                        all-browser "flex-flow",   column nowrap
                        all-browser "align-items", flex-start

                        padding: 0px 5px

                        nav
                            adapter-display( flex )

                            padding: 1px 0px

                            a
                                adapter-display( flex )
                                all-browser "flex-flow", row, nowrap

                                padding: 0px 7px 0px 0px

                                background-color: rgba( 0, 0, 0, 0 )

                            span[class$="-icon"]
                                adapter-display( "inline-box" )

                                width : 24px
                                height: @width

                                opacity: 0.2

                                &:hover
                                    all-browser "transition", opacity .3s ease
                                    opacity: 1

                            .weibo-icon
                                background: url( ../image/weibo-icon.png ) no-repeat

                            .douban-icon
                                background: url( ../image/douban-icon.png ) no-repeat

                            .gplus-icon
                                background: url( ../image/gplus-icon.png ) no-repeat

                            .linkin-icon
                                background: url( ../image/linkin-icon.png ) no-repeat

                            span[class^="weibo"]:hover
                                background: url( ../image/weibo-hover-icon.png ) no-repeat

                            span[class^="douban"]:hover
                                background: url( ../image/douban-hover-icon.png ) no-repeat

                            span[class^="gplus"]:hover
                                background: url( ../image/gplus-hover-icon.png ) no-repeat

                            span[class^="linkin"]:hover
                                background: url( ../image/linkin-hover-icon.png ) no-repeat



@media (max-width: 1385px)
    .header
        .banner
            zoom: 0.8
        .title
            zoom: 0.9
        .download
            zoom: 0.9

@media (max-width: 807px)
    .header
        all-browser "flex-flow", column nowrap
        .banner
            zoom: 0.5
        .title
            zoom: 0.6
        .download
            zoom: 0.5

    .main
        zoom: 0.8

@media (max-width: 979px)
    .footer ul li div
        all-browser "flex-flow",   column nowrap
        all-browser "align-items", center
