.download
    display: -webkit-box;
    -webkit-box-align: end;

.btn-download
    color: #fff
    font-size : 43px

    text-shadow: #136491 0px 1px 2px

    background-color: #2292CC
    background-image: linear-gradient(to bottom,#2FA6E4,#2292CC)
    background-repeat: repeat-x

    border-color: #066397
    all-browser: 'box-shadow', inset 0 1px 0 rgba(255, 255, 255, 0.2), 0 1px 2px rgba(0, 0, 0, 0.05);

    padding : 15px
    text-decoration: none

    all-browser: 'border-radius', 6px

    display : -webkit-box

    span
        display : block

        width : 48px
        height : 48px

        background: url( "/assets/image/webstore.png" ) no-repeat

    &:hover
        text-decoration: none
        background-position: 0 -15px

        all-browser 'transition', background-position 0.1s linear

.btn-offline-download
    text-decoration: none
    color: #000
    padding: 0px 2px

    &:hover
        background-color: rgba(0,0,0,.4)
        -webkit-transition: background-color 1s ease
        -webkit-border-radius: 3px

.smaller
    font-size: 10px