vendors = webkit moz o ms official
all-browser( prop, arguments )
  { prop }: arguments
  for vendor in vendors
     -{ vendor }-{ prop }: arguments

@font-face
    src: url( ../font/en.otf ) format( opentype )
    font-family: en

html
    width  : 100%
    height : 100%

body
    display : -webkit-box
    -webkit-box-flex: 1
    -webkit-box-orient: vertical

    height  : 100%
    margin  : 0px
    padding : 0px

    font-family : en
    font-weight: bold

    div
        display : -webkit-box
        -webkit-box-pack : center
        -webkit-box-align: center

.top
    height : 50px

.title
    h1
        font-size: 50px
