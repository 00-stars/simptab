{
    "manifest_version": 2,
    "name"            : "__MSG_extension_name__",
    "short_name"      : "SimpTab",
    "version"         : "1.3.0",
    "default_locale"  : "en",
    "description"     : "__MSG_extension_desc__",
    "author"          : "Kenshin",
    "homepage_url"    : "http://ksria.com/simptab",
    "chrome_url_overrides": {
        "newtab": "main.html"
    },
    "icons": {
        "16" : "assets/images/icon16.png",
        "48" : "assets/images/icon48.png",
        "128": "assets/images/icon128.png"
    },
    "content_security_policy": "script-src 'self' https://*.flickr.com 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "topSites",
        "storage",
        "http://*.bing.com/",
        "http://*.bing.net/",
        "https://*.unsplash.com/",
        "https://*.unsplash.it/",
        "http://*.wallhaven.cc/",
        "https://*.staticflickr.com/"
    ],
    "commands": {
      "info"    : { "suggested_key": { "default": "Alt+I" }, "description": "__MSG_controlbar_info__"     },
      "download": { "suggested_key": { "default": "Alt+D" }, "description": "__MSG_controlbar_download__" },
      "upload"  : { "suggested_key": { "default": "Alt+U" }, "description": "__MSG_controlbar_upload__"   },
      "favorite": { "suggested_key": { "default": "Alt+F" }, "description": "__MSG_controlbar_favorite__" }
    },
    "update_url": "http://ksria.com/simptab/updates.xml"
}
